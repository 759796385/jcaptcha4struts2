<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<include file="struts-default.xml" />
	
	<package name="jcaptcha4struts2-default" extends="struts-default">
				
		<result-types>
			<result-type name="captchaImage" class="jcaptcha4struts2.core.actions.support.CaptchaImageResult"/>
		</result-types>
		
		<interceptors>
			<interceptor name="jcaptchaValidation" class="jcaptcha4struts2.core.interceptors.JCaptchaValidationIntercepter" />
			<interceptor-stack name="jcaptchaDefaultStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="jcaptchaValidation" />
			</interceptor-stack>
		</interceptors>
		
		<action name="jcaptcha_image"	class="jcaptcha4struts2.core.actions.JCaptchaImageAction">
			<result type="captchaImage"/>
		</action>
		
	</package>

</struts>

